{
  "npmClient": "yarn",
  "packages": ["packages/*", "packages/**/modular", "packages/**/legacy", "tests", "tests_modular"],
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "exact": true,
      "gitRemote": "origin",
      "message": "chore(release): release packages"
    }
  },
  "ignoreChanges": ["**/docs/**", "**/.github/**", "**/e2e/**", "**/tests/**", "**/tests_modular/**"],
  "version": "11.2.0"
}
